{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "react-native"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "extends" : [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb-base"
    ],
    "rules" : {
        "semi": [2, "never"],
        "arrow-body-style" : 0,
        "comma-dangle": 0,
        "implicit-arrow-linebreak": 0,
        "no-use-before-define": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
}